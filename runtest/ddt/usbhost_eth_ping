# @name USBHOST Ethernet ping test 
# @desc Brings net iface up and pings gw
# @requires usb/host
# @setup_requires usbhosteth

USBHOST_S_FUNC_ETH_PING source 'common.sh'; iface_list=`get_active_eth_interfaces.sh`; echo "${iface_list[@]}"; iface=`usb_eth_search_device.sh 'usb'` || die "error getting usb eth interface name";  for interface in ${iface_list[@]}; do do_cmd "ifconfig $interface down"; done; do_cmd "ifconfig ${iface} up"; do_cmd "udhcpc -i ${iface}"; host=`get_eth_gateway.sh "-i ${iface}"` || die "error getting eth gateway address"; do_cmd "ping ${host} -c 50"; do_cmd "ifdown $iface"; for interface in ${iface_list[@]}; do do_cmd "ifconfig $interface up"; do_cmd "udhcpc -i $interface"; done

USBHOST_S_FUNC_ETH_PING_MULTI-PKT-SIZES source 'common.sh'; iface_list=`get_active_eth_interfaces.sh`; iface=`usb_eth_search_device.sh 'usb'` || die "error getting usb eth interface name"; for interface in ${iface_list[@]}; do do_cmd "ifconfig $interface down"; done; do_cmd "ifconfig ${iface} up"; do_cmd "udhcpc -i ${iface}"; host=`get_eth_gateway.sh "-i ${iface}"` || die "error getting eth gateway address"; for size in 64 128 512 1024 4096 8192 16384; do do_cmd "ping ${host} -c 25 -s ${size}";done; do_cmd "ifdown $iface"; for interface in ${iface_list[@]}; do do_cmd "ifconfig $interface up"; do_cmd "udhcpc -i $interface"; done

USBHOST_L_STRESS_ETH_PING_MULTI-PKT-SIZES source 'common.sh'; iface_list=`get_active_eth_interfaces.sh`; iface=`usb_eth_search_device.sh 'usb'` || die "error getting usb eth interface name"; for interface in ${iface_list[@]}; do do_cmd "ifconfig $interface down"; done; do_cmd "ifconfig ${iface} up"; do_cmd "udhcpc -i $iface}"; host=`get_eth_gateway.sh "-i ${iface}"` || die "error getting eth gateway address"; for size in 64 128 512 1024 4096 8192 16384; do do_cmd "ping ${host} -c 1000 -s ${size}";done; do_cmd "ifdown $iface"; for interface in ${iface_list[@]}; do do_cmd "ifconfig $interface up"; do_cmd "udhcpc -i $interface"; done

USBHOST_L_STRESS_ETH_PING_ALL-PKT-SIZES source 'common.sh'; iface_list=`get_active_eth_interfaces.sh`; iface=`usb_eth_search_device.sh 'usb'` || die "error getting usb eth interface name"; for interface in ${iface_list[@]}; do do_cmd "ifconfig $interface down"; done; do_cmd "ifconfig ${iface} up"; do_cmd "udhcpc -i ${iface}"; host=`get_eth_gateway.sh "-i ${iface}"` || die "error getting eth gateway address"; for size in {10..1000}; do do_cmd "ping ${host} -c 10 -s $size";done; do_cmd "ifdown $iface"; for interface in ${iface_list[@]}; do do_cmd "ifconfig $interface up"; do_cmd "udhcpc -i $interface"; done

