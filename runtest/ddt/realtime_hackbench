# @name Worstcase Latency with various load by using cyclictest
# @desc Measure latency under various loads using cyclictest
# @requires armv*
# @setup_requires

REALTIME_S_PERF_1C_HACKBENCH source 'functions.sh'; source 'board_requirements.sh'; latency=`get_acceptable_latency hackbench`; multi_run_processes.sh -s "timeout -t 120 -s 9 sh -c 'while true; do hackbench; done'  || true" -l "-n 1" -s "run_cyclictest $latency -S -p98 -m -n -q -D 2m" -l "-n 1"

REALTIME_L_PERF_1C_HACKBENCH source 'functions.sh'; source 'board_requirements.sh'; latency=`get_acceptable_latency hackbench`; multi_run_processes.sh -s "timeout -t 14400 -s 9 sh -c 'while true; do hackbench; done'  || true" -l "-n 1" -s "run_cyclictest $latency -S -p98 -m -n -q -D 4h" -l "-n 1"