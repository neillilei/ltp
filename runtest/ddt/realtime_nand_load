# @name Worstcase Latency with storage IO load by using cyclictest
# @desc Measure latency under NAND IO load using cyclictest
# @requires nand
# @setup_requires

REALTIME_S_PERF_1C_NAND source 'functions.sh'; source 'board_requirements.sh'; latency=`get_acceptable_latency nand`; multi_run_processes.sh -s "timeout -t 115 -s 9 sh -c 'while true; do ${LTPROOT}/runltp -P $PLATFORM -f ddt/nand_mtd_dd_rw_jffs2 -s 'NAND_S_FUNC_DD_RW_JFFS2_ERASESIZE'; done'  || true" -l "-n 1" -s "run_cyclictest $latency -S -p98 -m -n -q -D 2m" -l "-n 1"

REALTIME_L_PERF_1C_NAND source 'functions.sh'; source 'board_requirements.sh'; latency=`get_acceptable_latency nand`; multi_run_processes.sh -s "timeout -t 14380 -s 9 sh -c 'while true; do ${LTPROOT}/runltp -P $PLATFORM -f ddt/nand_mtd_dd_rw_jffs2 -s 'NAND_S_FUNC_DD_RW_JFFS2_ERASESIZE'; done'  || true" -l "-n 1" -s "run_cyclictest $latency -S -p98 -m -n -q -D 4h" -l "-n 1"