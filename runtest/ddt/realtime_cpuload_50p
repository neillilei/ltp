# @name Worstcase Latency with with 50% CPU load
# @desc Measure Max latency when CPU is 50% loaded
# @requires armv*
# @setup_requires

REALTIME_S_PERF_1C_CPU50P source 'functions.sh'; source 'board_requirements.sh'; latency=`get_acceptable_latency cpu50p`; multi_run_processes.sh -s "cpuloadgen 50 50 120 || true" -l "-n 1 -r 98" -s "run_cyclictest $latency -S -p97 -m -n -q -D 2m" -l "-n 1"

REALTIME_L_PERF_1C_CPU50P source 'functions.sh'; source 'board_requirements.sh'; latency=`get_acceptable_latency cpu50p`; multi_run_processes.sh -s "timeout -t 14400 -s 9 sh -c 'while true; do cpuloadgen 50 50 600; done'  || true" -l "-n 1 -r 98" -s "run_cyclictest $latency -S -p97 -m -n -q -D 4h" -l "-n 1"