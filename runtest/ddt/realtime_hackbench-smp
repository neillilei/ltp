# @name Worstcase Latency on isolated core with hackbench load
# @desc Measure latency under using cyclictest while running hackbench on isolated core
# @requires armv* && smp
# @setup_requires

REALTIME_S_PERF_SHIELD_SMP_HACKBENCH source 'functions.sh'; shield_shell; source 'board_requirements.sh'; latency=`get_acceptable_latency hackbench`; multi_run_processes.sh -s "timeout -t 120 -s 9 sh -c 'while true; do hackbench; done'  || true" -l "-n 1" -s "run_cyclictest $latency -p98 -m -n -q -D 2m" -l "-n 1"

REALTIME_L_PERF_SHIELD_SMP_HACKBENCH source 'functions.sh'; shield_shell; source 'board_requirements.sh'; latency=`get_acceptable_latency hackbench`; multi_run_processes.sh -s "timeout -t 14400 -s 9 sh -c 'while true; do hackbench; done'  || true" -l "-n 1" -s "run_cyclictest $latency -p98 -m -n -q -D 4h" -l "-n 1"
