# @name Worstcase Latency with SATA IO load by using cyclictest
# @desc Measure latency under SATA IO load using cyclictest
# @requires sata && smp
# @setup_requires sata

REALTIME_S_PERF_SHIELD_SMP_SATA source 'functions.sh'; shield_shell; source 'board_requirements.sh'; latency=`get_acceptable_latency sata`; multi_run_processes.sh -s "timeout -t 240 -s 9 sh -c '${LTPROOT}/runltp -P $PLATFORM -f ddt/sata_perf_ext4 -s SATA_S_PERF_EXT4_10M'  || true" -l "-n 1" -s "run_cyclictest $latency -p98 -m -n -q -D 3m" -l "-n 1"

REALTIME_L_PERF_SHIELD_SMP_SATA source 'functions.sh'; shield_shell; source 'board_requirements.sh'; latency=`get_acceptable_latency sata`; multi_run_processes.sh -s "timeout -t 14440 -s 9 sh -c 'while true; do ${LTPROOT}/runltp -P $PLATFORM -f ddt/sata_stress_dd_rw_ext2 -s SATA_L_STRESS_EXT2_DD_RW_100M; done'  || true" -l "-n 1" -s "run_cyclictest $latency -p98 -m -n -q -D 4h" -l "-n 1"
