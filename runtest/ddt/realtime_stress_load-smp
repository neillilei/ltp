# @name Worstcase Latency with various load on isolated core by using cyclictest
# @desc Measure latency under various load on isolated core using cyclictest
# @requires armv* && smp && net
# @setup_requires
# @notes iperf server need to be started in NFS host pc before run net_load test

REALTIME_S_PERF_SHIELD_SMP_STRESS_LOAD source 'functions.sh'; shield_shell; source 'board_requirements.sh'; NFS_HOST=`get_nfs_host.sh`; latency=`get_acceptable_latency stress`; multi_run_processes.sh -s "timeout -t 120 -s 9 sh -c 'while true; do hackbench; done'  || true" -l "-n 1" -s "timeout -t 120 -s 9 sh -c 'while true; do ${LTPROOT}/testcases/bin/genload --vm 2 --vm-chunks 1 --vm-bytes 8388608; done'  || true" -l "-n 1" -s "timeout -t 120 -s 9 sh -c 'while true; do ${LTPROOT}/runltp -P $PLATFORM -f ddt/eth_ping -s ETH_S_FUNC_PING_300S; done'  || true" -l "-n 1" -s "timeout -t 120 -s 9 sh -c 'while true; do stress --cpu 4; done'  || true" -l "-n 1" -s "run_cyclictest $latency -p98 -m -n -q -D 2m" -l "-n 1"

REALTIME_L_PERF_SHIELD_SMP_STRESS_LOAD source 'functions.sh'; shield_shell; source 'board_requirements.sh'; NFS_HOST=`get_nfs_host.sh`; latency=`get_acceptable_latency stress`; multi_run_processes.sh -s "timeout -t 14400 -s 9 sh -c 'while true; do hackbench; done'  || true" -l "-n 1" -s "timeout -t 14400 -s 9 sh -c 'while true; do ${LTPROOT}/testcases/bin/genload --vm 2 --vm-chunks 1 --vm-bytes 8388608; done'  || true" -l "-n 1" -s "timeout -t 14400 -s 9 sh -c 'while true; do ${LTPROOT}/runltp -P $PLATFORM -f ddt/eth_ping -s ETH_S_FUNC_PING_300S; done'  || true" -l "-n 1" -s "timeout -t 14400 -s 9 sh -c 'while true; do stress --cpu 4; done'  || true" -l "-n 1"  -s "run_cyclictest $latency -p98 -m -n -q -D 4h" -l "-n 1"
