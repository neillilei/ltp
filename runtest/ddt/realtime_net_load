# @name Worstcase Latency with net load by using cyclictest
# @desc By using iperf/ping to create net load and under this load to measure latency using cyclictest
# @requires armv* && net
# @setup_requires
# @notes iperf server need to be started in NFS host pc before run net_load test

REALTIME_S_PERF_1C_PING source 'functions.sh'; NFS_HOST=`get_nfs_host.sh`; source 'board_requirements.sh'; latency=`get_acceptable_latency net`; multi_run_processes.sh -s "timeout -t 120 -s 9 sh -c 'while true; do ${LTPROOT}/runltp -P $PLATFORM -f ddt/eth_ping -s ETH_S_FUNC_PING_300S; done'  || true" -l "-n 1" -s "run_cyclictest $latency -S -p98 -m -n -q -D 2m" -l "-n 1"

REALTIME_S_PERF_1C_NET source 'functions.sh'; source 'board_requirements.sh'; latency=`get_acceptable_latency net`; multi_run_processes.sh -s "timeout -t 115 -s 9 sh -c 'while true; do run_iperf.sh -m -M 1500 -f M -d -t 110 -w 8K; done'  || true" -l "-n 1" -s "run_cyclictest $latency -S -p98 -m -n -q -D 2m" -l "-n 1"

REALTIME_L_PERF_1C_NET source 'functions.sh'; source 'board_requirements.sh'; latency=`get_acceptable_latency net`; multi_run_processes.sh -s "timeout -t 14400 -s 9 sh -c 'while true; do run_iperf.sh -m -M 1500 -f M -d -t 14380 -w 128K; done'  || true" -l "-n 1" -s "run_cyclictest $latency -S -p98 -m -n -q -D 4h" -l "-n 1"
